@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<section class="container">
    <h1 class="text-center">List of Roles</h1>
    <a asp-action="Create" class="btn btn-primary">Create</a><hr />
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</section>